
@{
    ViewBag.Title = "LigueHome";
}

<div class="contenu">

    <div class="start">
        <div class="start-total">
            <div class="start-intermediaire">
                <a href="http://www.ffjudo.com/" id="logo" title="retour Accueil">
                    <img src="~/Content/Images/logo.png" alt="Fédération Française de Judo">
                </a>
                <div class="start-content">
                    <h1> Espace Responsable de Ligue</h1>
                    <span>Bienvenue sur la page dédiée à l'espace des Responsables de Ligue : </span>
                    <span>@ViewBag.texte</span>
                    <hr>

                </div>
            </div>
        </div>
    </div>
    <div class="etape1">
        <div class="arrow-down-white"></div>

    </div>
    <div class="arrow-down-blue"></div>

    <div id="form-div-big">
        <div class="sous-titre-form-blanc">
            Vos Actions :
            <div class="white-separator"></div>
        </div>
        <div class="admin-block-conteneur-alignement">
            <div class="admin-block-conteneur">
                <div class="admin-block" onclick="location.href='@Url.Action("ListeToutesInscriptions", "Responsable")'">
                    <div class="admin-block-titre">Listes des inscriptions</div>
                    <div class="admin-block-image"><img src="@Url.Content("~/Content/Images/Admin/registrations.png")" /></div>
                    <div class="admin-block-desc">Dans cette section vous pouvez voir la liste de toutes les inscriptions faites par des judokas de votre Ligue.</div>
                </div>
            </div>
        </div>
    </div>
</div>